<h1>Listing Panels</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @panels.each do |panel| %>
      <tr>
        <td><%= link_to panel.name, panel %> (<%= panel.cards.count %>)</td>
        <td class="actions">
          <%= link_to 'Edit', edit_panel_path(panel) %>
          <%= link_to 'Destroy', panel, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Panel', new_panel_path, class: "button" %>
