<%= simple_form_for(@card, url: panel_cards_path, method: :post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :text, autofocus: true %>
    <%= f.input :translation %>
    <%= f.association :panel %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
